<Window x:Class="Tcp_Controler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tcp_Controler"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click ="ButtonLeft_Click" Width="100" Height="50" Content="Left" Margin="10"/>
            <Button Click ="ButtonRight_Click" Width="100" Height="50" Content="Left" Margin="10"/>
        </StackPanel>

        <Button Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Content="Connect" Margin="10" Click="ButtonConnect_Click"/>
    </Grid>
</Window>
